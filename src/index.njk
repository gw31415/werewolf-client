<html>

<head>
	<meta charSet="utf-8" />
	<meta lang="ja" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
	<title>Werewolf Online</title>
	<link href="https://unpkg.com/@acab/reset.css" rel="stylesheet" />

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

	<link href="https://fonts.googleapis.com/earlyaccess/hannari.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Bellefair&family=Zen+Old+Mincho&display=swap" rel="stylesheet">
	<link rel="stylesheet"
		href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
	<style>
		:root {
			color-scheme: only dark;
			user-select: none;
			-webkit-touch-callout: none;
			-webkit-user-select: none;
		}

		body {
			font-family: Bellefair, 'Zen Old Mincho', Hannari, serif;
			padding: 1rem;
		}

		img {
			user-drag: none;
			-webkit-user-drag: none;
			-moz-user-select: none;
		}

		* {
			box-sizing: border-box;
		}

		@media screen and (max-width: 640px) {
			html {
				font-size: 16px;
			}

			body {
				padding: .5rem;
			}
		}
	</style>
</head>

<body>
	<div id="app"></div>
</body>

<script type="module" src="app.js"></script>
<script>
	// ダブルタップズーム無効化
	document.addEventListener("dblclick", (e) => {e.preventDefault();}, {passive: false});
	// ピンチズーム無効化
	document.addEventListener('touchstart', (e) => {if (e.touches.length > 1) e.preventDefault();}, {
		passive: false
	});
	// スワイプ無効化
	document.addEventListener('touchmove', (e) => {e.preventDefault();}, {passive: false});
</script>

</html>
